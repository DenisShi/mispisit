<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>

<body>

    @section Header{
        <div class="header">
            <div class="header__content container">
                <div class="row">
                    <div class="header__content-title col-12">
                        <h1>Шаурма с душой</h1>
                    </div>
                </div>
                <div class="header__content-description ccol-12">
                    <p>Делаем с любовью</p>
                </div>
            </div>
        </div>
    }

    <main class="main">
        <div class="home_slider">
            <div class="home_slider__position container">
                <div class="row">
                    <div class="col-12">
                        <div id="carouselIndicators" class="home_slider__block carousel slide" data-ride="carousel">
                            <ol class="home_slider__indicators carousel-indicators">
                                <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="home_slider__content carousel-inner">
                                <div class="carousel-item active">
                                    <img class="home_slider__content-item d-block" src="~/Content/images/small_item_3123.png" alt="Первый слайд">
                                </div>
                                <div class="carousel-item">
                                    <img class="home_slider__content-item d-block" src="~/Content/images/small_item_3379.jpg" alt="Второй слайд">
                                </div>
                                <div class="carousel-item">
                                    <img class="home_slider__content-item d-block" src="~/Content/images/small_item_3390.jpg" alt="Третий слайд">
                                </div>
                                <a class="home_slider__arrow carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                                    <i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="home_slider__arrow carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                                    <i class="fa fa-arrow-right fa-2x" aria-hidden="true"></i>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="catalog">
            <div class="catalog__content container">
                <div class="row">
                    <div class="catalog__content-title col-12">
                        <p> Наше меню </p>
                    </div>
                    <div class="catalog__content-main col-12">
                    </div>
                </div>
            </div>
        </div>
    </main>



    <script src="https://kit.fontawesome.com/0747137cf0.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/transparentNavbar.js"></script>
</body>
</html>