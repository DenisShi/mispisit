@model IEnumerable<MISP.Product>

@{
    ViewBag.Title = "Каталог";
}

<h2>Каталог</h2>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Цена
        </th>
        <th>
            Описание
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price) Р.
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Добавить", "AddToCart", new { id=item.Id })

        </td>
    </tr>
}

</table>
